@using futshop_dweb.Data
@model IEnumerable<DW_Final_Project.Models.Artigos>
@{
    ViewData["Title"] = "IndexUsers";

}
@{
    @inject IUserService UserService
    if(UserService.addedToCart)
    {
        <div class="alert alert-success" role="alert">
            Produto adicionado ao carrinho com sucesso!
        </div>
        UserService.rmCart();
    }
}


<h1>Lista de Artigos</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tamanho)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                Imagem
            </th>
            <th>
                Liga
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tamanho)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td>
                    <img src="~/images/@item.ImagemURL" alt="Image" width="100" height="100" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.Nome)
                </td>
                 <td>
                    <a asp-action="addCarrinho" asp-route-id="@item.Id" class="btn btn-secondary">Adicionar ao carrinho</a>
                </td>

            </tr>
        }
    </tbody>
</table>
