@model futshop_dweb.Models.Utilizador

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Utilizador</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Model.Nome
        </dd>
        <dt class="col-sm-2">
            Telemóvel
        </dt>
        <dd class="col-sm-10">
            @Model.Telemovel
        </dd>
        <dt class="col-sm-2">
            Data de Nascimento
        </dt>
        <dd class="col-sm-10">
            @Model.DataNascFormatted
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Morada
        </dt>
        <dd class="col-sm-10">
            @Model.morada
        </dd>
        <dt class="col-sm-2">
            Código Postal
        </dt>
        <dd class="col-sm-10">
            @Model.codigopostal
        </dd>
        <dt class="col-sm-2">
            Cidade
        </dt>
        <dd class="col-sm-10">
            @Model.Cidade
        </dd>
        <dt class="col-sm-2">
            País
        </dt>
        <dd class="col-sm-10">
            @Model.Pais
        </dd>
        <dt class="col-sm-2">
            Administrador
        </dt>
        <dd class="col-sm-10">
            @(ViewBag.IsAdmin ? "Sim" : "Não")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.UtilizadorId" class="btn btn-secondary">Editar</a> 
    <a asp-action="Index" class="btn btn-danger">Voltar à lista</a> |
    <a asp-controller="Transacaos" asp-action="TransacoesPorUtilizador" asp-route-id="@Model.UtilizadorId" class="btn btn-info">Ver Transações</a>
</div>
