@model IEnumerable<futshop_dweb.Models.Transacao>

@{
    ViewData["Title"] = "Transações por Utilizador";
}

<h1>Transações por Utilizador</h1>

<table class="table">
    <thead>
        <tr>
            <th>CompraId</th>
            <th>Data da Compra</th>
            <th>Total</th>
            <th>Utilizador</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CompraId)</td>
                <td>@Html.DisplayFor(modelItem => item.DataCompra)</td>
                <td>@Html.DisplayFor(modelItem => item.Total)</td>
                <td>@Html.DisplayFor(modelItem => item.Utilizador.Nome)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.CompraId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.CompraId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.CompraId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
